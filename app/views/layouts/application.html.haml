!!!
%html
  %head
    %title Wolfgang Wallace
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %p.flash-message.notice= notice
    %p.flash-message.alert= alert

    .sidepanel
      .menu-button
        %i.fa.fa-bars

      .navigation
        = image_tag 'ww_wolf_blue_transparent_notext.png', class: 'logo'
        = render 'nav_link', data: {path: music_path, text: 'Music'}
        = render 'nav_link', data: {path: videos_path, text: 'Videos'}
        = render 'nav_link', data: {path: shows_path, text: 'Shows'}
        = render 'nav_link', data: {path: contact_path, text: 'Contact'}

      .footer
        = link_to(Settings.social_media.soundcloud.url, class: 'social-media-link', target: '_blank') do
          %i.fa.fa-soundcloud>
        = link_to(Settings.social_media.instagram.url, class: 'social-media-link', target: '_blank') do
          %i.fa.fa-instagram>
        = link_to(Settings.social_media.facebook.url, class: 'social-media-link', target: '_blank') do
          %i.fa.fa-facebook>

    .content
      = yield
